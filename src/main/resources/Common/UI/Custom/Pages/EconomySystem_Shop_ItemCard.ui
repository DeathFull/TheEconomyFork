Button {
  Anchor: (Width: 131, Bottom: 10, Right: 10);
  Padding: (Full: 12);
  Background: (Color: #1a1a1a(0.6));
  LayoutMode: Top;
  Style: ButtonStyle(
    Default: (Background: #1B2A3A(0.8)),
    Hovered: (Background: #22364B(0.8)),
    Pressed: (Background: #152233(0.9))
  );

  ItemIcon #ItemIcon {
    Anchor: (Width: 64, Height: 64, Bottom: 5);
    Visible: true;
  }

  Label #ItemName {
    Style: (
      FontSize: 12,
      RenderBold: true,
      TextColor: #ffffff,
      HorizontalAlignment: Center
    );
    Anchor: (Bottom: 5);
  }

  Label #ItemPrice {
    Style: (
      FontSize: 11,
      TextColor: #cccccc,
      HorizontalAlignment: Center
    );
    Anchor: (Bottom: 0);
  }
}

