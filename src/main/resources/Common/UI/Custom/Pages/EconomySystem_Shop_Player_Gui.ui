$C = "../Common.ui";

$C.@PageOverlay {

  $C.@Container {
    Anchor: (Width: 1030, Height: 700);

    #Title {
      Group {
        Label #PlayerShopTitle {
          Style: (
            FontSize: 18,
            RenderBold: true,
            TextColor: #ffffff,
            HorizontalAlignment: Center
          );
          Anchor: (Width: 1030, Height: 40);
          Padding: (Top: 10, Bottom: 10);
          Text: "Loja do Jogador";
        }
      }
    }

    #Content {
      LayoutMode: Top;

      Group #ShopTabs {
        LayoutMode: Left;

        // Tabs serão adicionadas dinamicamente aqui
      }

      Group #ShopContent {
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        Padding: (Left: 10, Top: 10);
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        // Itens serão adicionados dinamicamente aqui
      }
    }

    $C.@TextButton #BackButton {
      Anchor: (Width: 120, Height: 30, Bottom: 10, Left: 10);
      Padding: (Top: 5, Bottom: 5, Left: 10, Right: 10);
      Text: "Voltar";
    }

  }
}

