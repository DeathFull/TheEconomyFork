$C = "../Common.ui";

$C.@PageOverlay {

  $C.@Container {
    Anchor: (Width: 1030, Height: 700);

    #Title {
      Group {
        Label #AdminShopTitle {
          Style: (
            FontSize: 18,
            RenderBold: true,
            TextColor: #ffffff,
            HorizontalAlignment: Center
          );
          Anchor: (Width: 1030, Height: 40);
          Padding: (Top: 10, Bottom: 10);
        }
      }
    }


    #Content {
      LayoutMode: Top;

      Group #ShopTabs {
        LayoutMode: Left;

        // Tabs serão adicionadas dinamicamente aqui
      }

      Group #ShopContent {
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        Padding: (Left: 10, Top: 10);
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        // Itens serão adicionados dinamicamente aqui
      }
      
      Group #ManagerButtons {
        LayoutMode: Left;
        Anchor: (Top: 0);
        Padding: (Top: 10, Bottom: 10);
        
        Button #ManageShopButton {
          Anchor: (Width: 200, Height: 40);
          Padding: (Full: 5);
          LayoutMode: Center;
          Style: ButtonStyle(
            Default: (Background: #1B2A3A(0.8)),
            Hovered: (Background: #22364B(0.8)),
            Pressed: (Background: #152233(0.9))
          );
          
          Label #ManageShopLabel {
            Style: (
              FontSize: 14,
              RenderBold: true,
              TextColor: #ffffff,
              HorizontalAlignment: Center,
              VerticalAlignment: Center
            );
          }
        }
      }
    }

  }
}

$C.@BackButton {}

