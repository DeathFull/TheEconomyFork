$C = "../Common.ui";

$C.@PageOverlay {

  $C.@Container {
    Anchor: (Width: 1030, Height: 700);

    #Title {
      Group {
        Label #ShopsTitle {
          Style: (
            FontSize: 18,
            RenderBold: true,
            TextColor: #ffffff,
            HorizontalAlignment: Center
          );
          Anchor: (Width: 1030, Height: 40);
          Padding: (Top: 10, Bottom: 10);
          Text: "Você está vendo os shops dos jogadores.";
        }
      }
    }

    #Content {
      LayoutMode: Left;

      Group #ShopContent {
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        Padding: (Left: 10, Top: 10);
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        // Itens serão adicionados dinamicamente aqui
      }
    }

  }
}

$C.@BackButton {}

