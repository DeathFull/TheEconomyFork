$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 500, Height: 200);

    Group {
      LayoutMode: Top;

      Label #TitleLabel {
        Style: (
          FontSize: 16,
          RenderBold: true,
          TextColor: #ffffff,
          HorizontalAlignment: Center
        );
        Anchor: (Width: 490, Height: 40);
        Padding: (Top: 10, Bottom: 10);
      }

      Group {
        LayoutMode: Left;
        Padding: (Left: 10, Right: 10, Top: 10);

        Label #PriceBuyLabel {
          Style: (
            FontSize: 12,
            TextColor: #cccccc
          );
          Anchor: (Width: 120, Height: 30);
          Padding: (Top: 6);
        }

        $C.@TextField #PriceBuyField {
          FlexWeight: 1;
          Anchor: (Height: 30);
          Style: (
            FontSize: 13,
            TextColor: #ffffff(0.85)
          );
        }
      }

      Group {
        LayoutMode: Left;
        Padding: (Left: 10, Right: 10, Top: 10);

        Label #PriceSellLabel {
          Style: (
            FontSize: 12,
            TextColor: #cccccc
          );
          Anchor: (Width: 120, Height: 30);
          Padding: (Top: 6);
        }

        $C.@TextField #PriceSellField {
          FlexWeight: 1;
          Anchor: (Height: 30);
          Style: (
            FontSize: 13,
            TextColor: #ffffff(0.85)
          );
        }
      }

      Group {
        LayoutMode: Left;
        Padding: (Left: 10, Right: 10, Top: 20);

        $C.@TextButton #ConfirmButton {
          Text: "Confirm";
          Padding: (Left: 12, Right: 25, Top: 6, Bottom: 6);
          Anchor: (Width: 200, Height: 40);
        }

        Label {
          FlexWeight: 1;
        }

        $C.@CancelTextButton #CancelButton {
          Text: "Cancel";
          Padding: (Left: 12, Right: 25, Top: 6, Bottom: 6);
          Anchor: (Width: 200, Height: 40);
        }
      }
    }
  }
}

$C.@BackButton {}

