$C = "../Common.ui";

$C.@PageOverlay {
  $C.@Container {
    Anchor: (Width: 450, Height: 143);

    Group {
      LayoutMode: Top;

      Label #ConfirmationMessage {
        Style: (
          FontSize: 11,
          RenderBold: true,
          TextColor: #ffffff,
          VerticalAlignment: Center,
          HorizontalAlignment: Center
        );
        Anchor: (Width: 440, Height: 50);
        Padding: (Left: 0, Right: 0, Top: 8, Bottom: 6);
      }

      Group {
        LayoutMode: Left;
        Padding: (Left: 10, Right: 10);

        Label #QuantityLabel {
          Style: (
            FontSize: 12,
            TextColor: #cccccc
          );
          Anchor: (Width: 80, Height: 30);
          Padding: (Top: 6);
          Text: "Quantidade:";
        }

        $C.@TextField #QuantityField {
          FlexWeight: 1;
          Anchor: (Height: 30);
          Style: (
            FontSize: 13,
            TextColor: #ffffff(0.85)
          );
        }
      }

      Group {
        LayoutMode: Left;
        Padding: (Left: 10, Right: 10, Top: 15);

        $C.@TextButton #ConfirmButton {
          Text: "Confirm";
          Padding: (Left: 12, Right: 25, Top: 6, Bottom: 6);
          Anchor: (Width: 170, Height: 40);
        }

        Label {
          FlexWeight: 1;
        }

        $C.@CancelTextButton #CancelButton {
          Text: "Cancel";
          Padding: (Left: 12, Right: 25, Top: 6, Bottom: 6);
          Anchor: (Width: 170, Height: 40);
        }
      }
    }
  }
}

$C.@BackButton {}

